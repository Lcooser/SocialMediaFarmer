@model SocialMediaFarmer.Models.Pergunta

<h2>Fazer Pergunta</h2>

<form asp-action="FazerPergunta" method="post">
    <div class="form-group">
        <label asp-for="Topico">Tópico</label>
        <input asp-for="Topico" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ConteudoPergunta">Pergunta</label>
        <textarea asp-for="ConteudoPergunta" class="form-control" required></textarea>
    </div>

    <div class="mt-3">
        <a asp-action="FazerPergunta" asp-controller="Home" class="btn btn-success">Fazer Pergunta</a>
    </div>
</form>
